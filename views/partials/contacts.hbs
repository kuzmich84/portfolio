<div class="vg-page page-contact" id="contact">
    <h1 class="text-center fg-dark wow fadeInUp">Contact</h1>
    <div class="container-fluid">
        <div class="row py-5">
            <div class="col-lg-7 wow zoomIn">
                <div class="vg-maps">
                    <div id="google-maps" style="width: 100%; height: 100%;"></div>
                </div>
            </div>
            <div class="col-lg-5">
                <form class="vg-contact-form">
                    <div class="form-row">
                        <div class="col-12 wow fadeInUp">
                            <input class="form-control" type="text" name="Name" placeholder="Your Name">
                            <div class="cross"><i class="fas fa-times"></i></div>
                            <div class="check"><i class="fas fa-check"></i></div>
                            <small>Please fill the form</small>
                        </div>
                        <div class="col-6 wow fadeInUp">
                            <input class="form-control" type="text" name="Email" placeholder="Email Address">
                            <div class="cross"><i class="fas fa-times"></i></div>
                            <div class="check"><i class="fas fa-check"></i></div>
                            <small>Please fill the form</small>
                        </div>
                        <div class="col-6 wow fadeInUp">
                            <input class="form-control" type="text" name="Subject" placeholder="Subject">
                            <div class="cross"><i class="fas fa-times"></i></div>
                            <div class="check"><i class="fas fa-check"></i></div>
                            <small>Please fill the form</small>
                        </div>
                        <div class="col-12 wow fadeInUp">
                            <textarea class="form-control" name="Message" rows="6" placeholder="Enter message here.."></textarea>
                            <div class="cross"><i class="fas fa-times"></i></div>
                            <div class="check"><i class="fas fa-check"></i></div>
                            <small>Please fill the form</small>
                        </div>
                        <div>
                        <button  type="submit" class="btn btn-theme btn-contact mt-3 wow fadeInUp ml-1">Send Message</button>
                        <small>Please fill the form</small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>